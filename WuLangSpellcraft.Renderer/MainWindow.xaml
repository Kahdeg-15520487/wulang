<Window x:Class="WuLangSpellcraft.Renderer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:WuLangSpellcraft.Renderer.Controls"
        mc:Ignorable="d"
        Title="Wu Lang Spellcraft Renderer" Height="800" Width="1200"
        Background="#FF1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Top Menu Bar -->
        <Menu Grid.Row="0" Background="#FF2D2D30" Foreground="White">
            <MenuItem Header="_File">
                <MenuItem Header="_New Circle" Click="NewCircle_Click"/>
                <MenuItem Header="_Load Configuration" Click="LoadConfiguration_Click"/>
                <MenuItem Header="_Save Configuration" Click="SaveConfiguration_Click"/>
                <Separator/>
                <MenuItem Header="Load _Examples">
                    <MenuItem Header="Defensive Layered Circle" Click="LoadDefensiveExample_Click"/>
                    <MenuItem Header="Elemental Network" Click="LoadElementalNetworkExample_Click"/>
                    <MenuItem Header="Unified Composition" Click="LoadUnifiedExample_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Show _Connections" IsCheckable="True" IsChecked="{Binding ShowConnections, ElementName=CircleViewer}"/>
                <MenuItem Header="Show _Effects" IsCheckable="True" IsChecked="{Binding ShowEffects, ElementName=CircleViewer}"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Talisman Library -->
            <Border Grid.Column="0" Background="#FF252526" BorderBrush="#FF3F3F46" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Talisman Library" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        
                        <!-- Element Filter -->
                        <GroupBox Header="Filter by Element" Foreground="White" Margin="0,0,0,10">
                            <StackPanel>
                                <CheckBox x:Name="WaterFilter" Content="Water (水)" Foreground="CornflowerBlue" IsChecked="True" Margin="0,2"/>
                                <CheckBox x:Name="FireFilter" Content="Fire (火)" Foreground="OrangeRed" IsChecked="True" Margin="0,2"/>
                                <CheckBox x:Name="EarthFilter" Content="Earth (土)" Foreground="SandyBrown" IsChecked="True" Margin="0,2"/>
                                <CheckBox x:Name="MetalFilter" Content="Metal (金)" Foreground="Silver" IsChecked="True" Margin="0,2"/>
                                <CheckBox x:Name="WoodFilter" Content="Wood (木)" Foreground="ForestGreen" IsChecked="True" Margin="0,2"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Talisman List -->
                        <GroupBox Header="Available Talismans" Foreground="White">
                            <StackPanel x:Name="TalismanList">
                                <!-- Talismans will be populated by code-behind -->
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Circle Actions -->
                        <GroupBox Header="Circle Actions" Foreground="White" Margin="0,10,0,0">
                            <StackPanel>
                                <!-- Circle Size Control -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Circle Size:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider x:Name="CircleSizeSlider" Grid.Column="0"
                                                Minimum="3" Maximum="20" Value="5" 
                                                TickFrequency="1" IsSnapToTickEnabled="True"
                                                ValueChanged="CircleSizeSlider_ValueChanged"/>
                                        <TextBlock x:Name="CircleSizeLabel" Grid.Column="1" 
                                                   Text="5.0" Foreground="White" 
                                                   VerticalAlignment="Center" Margin="10,0,0,0" Width="30"/>
                                    </Grid>
                                    <TextBlock x:Name="CircleCapacityLabel" 
                                               Text="Max Talismans: 15" 
                                               Foreground="LightGray" FontSize="10" Margin="0,2,0,0"/>
                                </StackPanel>
                                
                                <Button Content="Add Random Talisman" Click="AddRandomTalisman_Click" Margin="0,2" 
                                        Background="#FF007ACC" Foreground="White" BorderThickness="0" Padding="5"/>
                                <Button Content="Clear Circle" Click="ClearCircle_Click" Margin="0,2"
                                        Background="#FF990000" Foreground="White" BorderThickness="0" Padding="5"/>
                                <Button Content="Generate Demo Circle" Click="GenerateDemoCircle_Click" Margin="0,2"
                                        Background="#FF00AA00" Foreground="White" BorderThickness="0" Padding="5"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Circle Composition Controls -->
                        <GroupBox Header="Circle Composition" Foreground="White" Margin="0,10,0,0">
                            <StackPanel>
                                <!-- Nested Circle Controls -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Nested Circles:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider x:Name="NestedSizeSlider" Grid.Column="0"
                                                Minimum="1" Maximum="8" Value="3" 
                                                TickFrequency="0.5" IsSnapToTickEnabled="True"/>
                                        <TextBlock x:Name="NestedSizeLabel" Grid.Column="1" 
                                                   Text="3.0" Foreground="White" 
                                                   VerticalAlignment="Center" Margin="10,0,0,0" Width="30"/>
                                    </Grid>
                                    <Button Content="Add Nested Circle" Click="AddNestedCircle_Click" Margin="0,5,0,2"
                                            Background="#FF6A5ACD" Foreground="White" BorderThickness="0" Padding="5"/>
                                </StackPanel>
                                
                                <!-- Connection Controls -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Circle Connections:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="ConnectionTypeCombo" Margin="0,0,0,5">
                                        <ComboBoxItem Content="Direct Energy Transfer" Tag="Direct"/>
                                        <ComboBoxItem Content="Resonance Amplification" Tag="Resonance"/>
                                        <ComboBoxItem Content="Continuous Flow" Tag="Flow"/>
                                        <ComboBoxItem Content="Trigger Activation" Tag="Trigger"/>
                                    </ComboBox>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Strength:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <Slider x:Name="ConnectionStrengthSlider" Grid.Column="1"
                                                Minimum="0.1" Maximum="2.0" Value="1.0" 
                                                TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                                        <TextBlock x:Name="ConnectionStrengthLabel" Grid.Column="2" 
                                                   Text="1.0" Foreground="White" 
                                                   VerticalAlignment="Center" Margin="10,0,0,0" Width="30"/>
                                    </Grid>
                                    <Button Content="Create Connected Circle" Click="CreateConnectedCircle_Click" Margin="0,5,0,2"
                                            Background="#FFFF6347" Foreground="White" BorderThickness="0" Padding="5"/>
                                </StackPanel>
                                
                                <!-- Composition Management -->
                                <StackPanel>
                                    <TextBlock Text="Composition Management:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <ListBox x:Name="CompositionList" Height="100" Background="#FF2D2D30" Foreground="White" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Select Circle" Click="SelectCircle_Click" Margin="0,0,5,0"
                                                Background="#FF4682B4" Foreground="White" BorderThickness="0" Padding="5" Width="80"/>
                                        <Button Content="Remove Circle" Click="RemoveCircle_Click" Margin="0,0,0,0"
                                                Background="#FFCD5C5C" Foreground="White" BorderThickness="0" Padding="5" Width="80"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" Background="#FF3F3F46" VerticalAlignment="Stretch"/>
            
            <!-- Main Canvas with Zoom Support -->
            <Border Grid.Column="2" Background="#FF1E1E1E">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Zoom Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,5" Background="#FF252526">
                        <TextBlock Text="Zoom:" Foreground="White" VerticalAlignment="Center" Margin="5,0"/>
                        <Slider x:Name="ZoomSlider" Width="150" 
                                Minimum="0.25" Maximum="3.0" Value="1.0" 
                                TickFrequency="0.25" IsSnapToTickEnabled="True"
                                ValueChanged="ZoomSlider_ValueChanged" Margin="5,0"/>
                        <TextBlock x:Name="ZoomLabel" Text="100%" Foreground="White" 
                                   VerticalAlignment="Center" Margin="5,0" Width="40"/>
                        <Button Content="Reset View" Click="ResetView_Click" 
                                Background="#FF444444" Foreground="White" 
                                BorderThickness="0" Padding="5,2" Margin="10,0"/>
                    </StackPanel>
                    
                    <!-- Scrollable Canvas -->
                    <ScrollViewer x:Name="CanvasScrollViewer" Grid.Row="1" 
                                  HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Auto">
                        <Viewbox x:Name="CanvasViewbox" Stretch="Uniform">
                            <Canvas x:Name="MainCanvas" Background="#FF2D2D30" Width="1500" Height="1200">
                                <!-- Circle will be added here dynamically -->
                                <controls:MagicCircleControl x:Name="CircleViewer" 
                                                           Canvas.Left="200" 
                                                           Canvas.Top="200"
                                                           ShowConnections="True"
                                                           ShowEffects="True"/>
                            </Canvas>
                        </Viewbox>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Right Splitter -->
            <GridSplitter Grid.Column="3" Width="5" Background="#FF3F3F46" VerticalAlignment="Stretch"/>
            
            <!-- Right Panel - Preview and Analysis -->
            <Border Grid.Column="4" Background="#FF252526" BorderBrush="#FF3F3F46" BorderThickness="1,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Spell Preview &amp; Analysis" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        
                        <!-- Circle Information -->
                        <GroupBox Header="Circle Information" Foreground="White" Margin="0,0,0,10">
                            <StackPanel>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Radius:" Foreground="LightGray" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="PreviewRadius" Grid.Column="1" Text="5.0" Foreground="White"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Talismans:" Foreground="LightGray" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="PreviewTalismanCount" Grid.Column="1" Text="0/15" Foreground="White"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Type:" Foreground="LightGray" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="PreviewCompositionType" Grid.Column="1" Text="Simple" Foreground="White"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Power Analysis -->
                        <GroupBox Header="Power Analysis" Foreground="White" Margin="0,0,0,10">
                            <StackPanel>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Base Power:" Foreground="LightGray" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="PreviewBasePower" Grid.Column="1" Text="0" Foreground="White"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Complexity:" Foreground="LightGray" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="PreviewComplexity" Grid.Column="1" Text="1.0" Foreground="White"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Final Output:" Foreground="LightGray" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="PreviewFinalPower" Grid.Column="1" Text="0" Foreground="Cyan" FontWeight="Bold"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Casting Time:" Foreground="LightGray" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="PreviewCastingTime" Grid.Column="1" Text="3.0s" Foreground="White"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Element Balance -->
                        <GroupBox Header="Element Balance" Foreground="White" Margin="0,0,0,10">
                            <StackPanel x:Name="PreviewElementBalance">
                                <!-- Element distribution will be populated dynamically -->
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Spell Effects -->
                        <GroupBox Header="Active Effects" Foreground="White" Margin="0,0,0,10">
                            <StackPanel x:Name="PreviewEffectsList">
                                <TextBlock Text="No effects active" Foreground="LightGray" FontStyle="Italic"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Composition Details -->
                        <GroupBox Header="Composition Details" Foreground="White" Margin="0,0,0,10">
                            <StackPanel x:Name="PreviewCompositionDetails">
                                <TextBlock Text="Simple circle - no composition" Foreground="LightGray" FontStyle="Italic"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Performance Metrics -->
                        <GroupBox Header="Performance Metrics" Foreground="White" Margin="0,0,0,10">
                            <StackPanel>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Efficiency:" Foreground="LightGray" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="PreviewEfficiency" Grid.Column="1" Text="100%" Foreground="White"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Stability:" Foreground="LightGray" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="PreviewStability" Grid.Column="1" Text="High" Foreground="White"/>
                                </Grid>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Risk Level:" Foreground="LightGray" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="PreviewRiskLevel" Grid.Column="1" Text="Low" Foreground="Green"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Preview Actions -->
                        <GroupBox Header="Preview Actions" Foreground="White">
                            <StackPanel>
                                <Button Content="Simulate Casting" Click="SimulateCasting_Click" Margin="0,2" 
                                        Background="#FF7B68EE" Foreground="White" BorderThickness="0" Padding="5"/>
                                <Button Content="Export Analysis" Click="ExportAnalysis_Click" Margin="0,2"
                                        Background="#FF20B2AA" Foreground="White" BorderThickness="0" Padding="5"/>
                                <Button Content="Generate Recommendations" Click="GenerateRecommendations_Click" Margin="0,2"
                                        Background="#FF32CD32" Foreground="White" BorderThickness="0" Padding="5"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#FF007ACC">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready" Foreground="White"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="CircleStatsText" Text="No circle loaded" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
